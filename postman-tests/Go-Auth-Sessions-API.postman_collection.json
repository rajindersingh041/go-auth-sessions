							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.token) {",
									"        pm.environment.set('jwt_token', jsonData.token);",
									"        console.log('JWT token saved:', jsonData.token);",
									"    }",
									"} else {",
									"    console.log('Login failed:', pm.response.text());",
